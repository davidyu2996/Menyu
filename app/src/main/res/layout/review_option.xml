<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorAccent">
    <TextView
        android:id="@+id/helpfulCounter"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="80dp"
        android:text="30"
        android:layout_height="35dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/helpful"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/helpfulCounter"
        android:layout_width="80dp"
        android:textStyle="bold"
        android:text="Helpfuls:"
        android:layout_height="0dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/reviewTitle"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textSize="22dp"
        android:text="%USERNAME% says..."
        android:layout_toLeftOf="@id/helpful"
        android:layout_alignParentLeft="true"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/reviewPreview"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="16dp"
        android:layout_below="@id/reviewTitle"
        android:layout_toLeftOf="@id/helpfulCounter"
        android:layout_alignParentLeft="true"
        android:layout_width="0dp"
        android:text="This meme was very dank, I think I will be coming back for seconds."
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:singleLine="true" />
    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_toLeftOf="@id/helpful" />
</RelativeLayout>