<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorAccent">
    <ImageView
        android:id="@+id/photoOfFood"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_menu_camera"/>
    <TextView
        android:id="@+id/nameOfFood"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textSize="22dp"
        android:text="Name of Food Goes Here"
        android:layout_toRightOf="@id/photoOfFood"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/reviewsOfFood"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="16dp"
        android:layout_below="@id/nameOfFood"
        android:layout_toRightOf="@id/photoOfFood"
        android:layout_width="wrap_content"
        android:text="26 Reviews Written"
        android:layout_height="match_parent"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/ratingOfFood"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="16dp"
        android:textSize="16dp"
        android:layout_below="@id/nameOfFood"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:text="+129"
        android:layout_height="match_parent"
        android:gravity="center|right"/>
</RelativeLayout>